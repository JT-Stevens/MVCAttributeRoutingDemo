@model IEnumerable<AttributeRoutingDemo.Models.Actor>

@{
    ViewBag.Title = ViewBag.SelectedMovieTitle;
}

<h2>@ViewBag.SelectedMovieTitle</h2>
<h4>Cast</h4>

<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Details", "GetActorById", new { actorID=item.ActorID }) |
            @Html.ActionLink("Other Movies In", "GetActorMovies", new { actorID = item.ActorID })
        </td>
    </tr>
}

</table>
