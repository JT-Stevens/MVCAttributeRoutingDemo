@model IEnumerable<AttributeRoutingDemo.Models.Movie>

@{
    ViewBag.Title = ViewBag.SelectedActorName;
}

<h2>@ViewBag.SelectedActorName movies</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MovieTitle)
        </td>
        <td>
            @Html.ActionLink("Details", "GetMoviebyId", new { movieID=item.MovieID }) |
            @Html.ActionLink("Actors in movie", "GetMovieActors", new { movieID=item.MovieID })
        </td>
    </tr>
}

</table>
