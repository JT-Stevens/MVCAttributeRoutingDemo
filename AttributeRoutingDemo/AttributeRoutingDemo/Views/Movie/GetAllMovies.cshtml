@model IEnumerable<AttributeRoutingDemo.Models.Movie>

@{
    ViewBag.Title = "Movie Page!";
}

<br />
<br />
<h3>Movie List</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>

                @Html.ActionLink("Movie Details", "GetMoviebyId", new { movieID = item.MovieID }) |
                @Html.ActionLink("See Actors", "GetMovieActors", new { movieID = item.MovieID })

            </td>
        </tr>
    }

</table>



