<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div><img src="~/Resources/Yellow Retro Mixtape Background General Soundcloud Banner.png" class="img-fluid" alt="Responsive image" style="width: 100%;"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ALL ABOUT MOVIES", "GetAllMovies", "Movie", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav">
                    <a class="nav-item navbar-link"> @Html.ActionLink("See all movies", "GetAllMovies", "Movie", new { area = "" }, new { @class = "navbar-brand" })</a>
                    <a class="nav-item navbar-link"> @Html.ActionLink("See all actors", "GetAllActors", "Movie", new { area = "" }, new { @class = "navbar-brand" })</a>

                </div>
                @*<ul class="nav navbar-nav">
                        <li> @Html.ActionLink("See all movies", "GetAllMovies", "Movie", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li> @Html.ActionLink("See all actors", "GetAllActors", "Movie", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>*@
            </div>
        </div>
    </div>


    <div class="container body-content">
        @*FC5F00*@
        @RenderBody()    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            .fa {
                padding: 12px;
                font-size: 15px;
                width: 38px;
                text-align: center;
                text-decoration: none;
                margin: 2px 5px;
                border-radius: 50%;
            }

                .fa:hover {
                    opacity: 0.7;
                }

            .fa-facebook {
                background: #FC5F00;
                color: #383838;
            }

            .fa-twitter {
                background: #FC5F00;
                color: #383838;
            }

            .fa-linkedin {
                background: #FC5F00;
                color: #383838;
            }

            .fa-instagram {
                background: #FC5F00;
                color: #383838;
            }
        </style>
        <hr />
        <footer style="margin-top: 15%; text-align:center">
            <p>
                &copy; @DateTime.Now.Year - All about movies  - &nbsp;&nbsp;
                <a href="mailto: allaboutmovies@gmail.com">Contact us by email</a>
                &nbsp;&nbsp;
                Stay on trend, follow the lastest news&nbsp;&nbsp;
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-instagram"></a>
                <a href="#" class="fa fa-linkedin"></a>
                <a href="#" class="fa fa-twitter"></a>
            </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>